root = true

# All files
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# HTML
[*.{html,html,cshtml}]
indent_style = space
indent_size  = 4

# CSS
[*.css]
indent_style = space
indent_size  = 2


# JAVASCRIPT
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size  = 2


# JSON
[*.json]
indent_style = space
indent_size  = 2

# YAML
[*.yaml]
indent_style = space
indent_size  = 2

# XML
[*.{xml,svg}]
indent_style = space
indent_size  = 4
